@inject IJSRuntime JS

@code {
    [Parameter]
    public string mensaje { get; set; } = string.Empty;
    protected override async Task OnInitializedAsync()
    {
        await ActivarAlertaAdvertencia();
    }
    private async Task ActivarAlertaAdvertencia()
    {
        await JS.InvokeVoidAsync("AlertaDeAdvertencia", mensaje);
    }
}