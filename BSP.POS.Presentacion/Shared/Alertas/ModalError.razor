@inject IJSRuntime JS

@code {
    [Parameter]
    public string mensaje { get; set; } = string.Empty;
    protected override async Task OnInitializedAsync()
    {
        await ActivarAlertaError();
    }
    private async Task ActivarAlertaError()
    {
        await JS.InvokeVoidAsync("AlertaDeError", mensaje);
    }
}
