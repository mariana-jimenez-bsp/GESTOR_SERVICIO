@inject IUsuariosInterface UsuariosService
@inject IPermisosInterface PermisosService
@inject IClientesInterface ClientesService
@inject AuthenticationStateProvider AuthenticationStateProvider

<div id="modal" class="modal" style='display: @(ActivarModal ? "block" : "none")'>
    <div class="modal-content">
        <EditForm Model="@usuario" OnValidSubmit="AgregarUsuario">
            <ObjectGraphDataAnnotationsValidator />
            <div class="modal-header d-flex justify-content-center text-primary">
                <h2 class="blue-dark-text text-41-book">Agregar<img class="mb-3" src="images/Perfil/Icono-de-usuario.png" /></h2>
            </div>

            <div class=" modal-body d-flex row g-2 text-center ">
                <div class="container border-transparent max-height-projects overflow-y-auto overflow-x-hidden scrollbar-modal-projects">
                    <div class="row  border border-success rounded-5 ">
                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text" for="c-nombreUsuario">Nombre:</label>
                            <input class="col-md-4 border border-success rounded-pill px-2 text-input" type="text" id="c-nombreUsuario" @bind-value="@usuario.nombre" @oninput="(e) => CambioNombre(e, usuario.id)">
                        </div>
                        <ValidationMessage For="@(() => usuario.nombre)" />
                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text" for="c-usuario">Usuario:</label>
                            <input class="col-md-4 border border-success rounded-pill px-2 text-input " id="c-usuario" type="text" @bind-value="@usuario.usuario" @oninput="(e) => CambioUsuario(e, usuario.id)">
                        </div>
                        <ValidationMessage For="@(() => usuario.usuario)" />
                        @if (!string.IsNullOrEmpty(usuario.mensajeUsuarioRepite))
                        {
                            <MensajeRepite Message="@usuario.mensajeUsuarioRepite" />
                        }
                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text" for="c-correo">Correo:</label>
                            <input class="col-md-4 border border-success rounded-pill px-2 text-input " id="c-correo" type="text" @bind-value="@usuario.correo" @oninput="(e) => CambioCorreo(e, usuario.id)">
                        </div>
                        <ValidationMessage For="@(() => usuario.correo)" />
                        @if (!string.IsNullOrEmpty(usuario.mensajeCorreoRepite))
                        {
                            <MensajeRepite Message="@usuario.mensajeCorreoRepite" />
                        }
                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text" for="c-clave">Clave:</label>
                            <input class="col-md-4 border border-success rounded-pill px-2 text-input" id="c-clave" type="password" @oninput="(e) => CambioClave(e, usuario.id)">
                        </div>
                        <ValidationMessage For="@(() => usuario.clave)" />
                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text" for="c-nombreCliente">Nombre Cliente:</label>
                            <select class="col-md-4 border border-success rounded-pill px-2 text-input " id="c-nombreCliente" @bind="@usuario.cod_cliente" @oninput="(e) => CambioCliente(e, usuario.id)">
                                @foreach (var cliente in listaClientes)
                                {
                                    <option value="@cliente.CLIENTE">@cliente.NOMBRE</option>
                                }
                            </select>
                        </div>
                        <ValidationMessage For="@(() => usuario.cod_cliente)" />

                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text" for="c-esquema">Esquema:</label>
                            <select @bind="usuario.esquema" class="col-md-4 border border-success rounded-pill px-2 text-input" id="c-esquema" @oninput="(e) => CambioEsquema(e, usuario.id)">
                                <option value="BSP">BSP</option>
                            </select>
                        </div>
                        <ValidationMessage For="@(() => usuario.esquema)" />
                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text" for="c-rol">Rol:</label>
                            <select @bind="usuario.rol" class="col-md-4 border border-success rounded-pill px-2 text-input" id="c-rol" @oninput="(e) => CambioRol(e, usuario.id)">
                                <option value="Usuario">Usuario</option>
                                <option value="Admin">Administrador</option>
                            </select>
                        </div>
                        <ValidationMessage For="@(() => usuario.rol)" />
                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text" for="c-telefono">Teléfono:</label>
                            <input class="col-md-4 border border-success rounded-pill px-2 text-input" type="text" id="c-telefono" @bind-value="@usuario.telefono" @oninput="(e) => CambioTelefono(e, usuario.id)">
                        </div>
                        <ValidationMessage For="@(() => usuario.telefono)" />
                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text" for="c-departamento">Departamento:</label>
                            <input class="col-md-4 border border-success rounded-pill px-2 text-input" id="c-departamento" type="text" @bind-value="@usuario.departamento" @oninput="(e) => CambioDepartamento(e, usuario.id)">
                        </div>
                        <ValidationMessage For="@(() => usuario.departamento)" />

                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text">Imagen:</label>
                            <div class="col-md-4 px-2">
                                @if (usuario.imagen != null && !usuario.imagen.SequenceEqual(new byte[] { 0x00 }))
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(usuario.imagen)" class="ps-2 pb-1 image-user" alt="Imagen" />
                                }
                                else
                                {
                                    <img class="ps-2 pb-1" alt="Sin Imagen" />
                                }
                                <InputFile class="text-center d-flex row me-2" accept="image/x-png,image/jpeg" OnChange="CambioImagen" />
                            </div>

                        </div>
                        <ValidationMessage For="@(() => usuario.ImagenFile)" />
                        <div class="d-flex justify-content-center mb-2 mt-2">
                            <label class="col-md-4  blue-dark-text label-text">Permisos:</label>
                            <div class="col-md-4 px-2">
                                @if (todosLosPermisos != null)
                                {

                                    foreach (var permiso in todosLosPermisos)
                                    {


                                        <div class=" ms-4">
                                            <input type="checkbox" class="custom-checkbox" id="myCheckbox-@usuario.id-@permiso.Id" checked="@permiso.EstadoCheck" @onchange="(e) => HandleCheckCambiado(e, permiso.Id)">
                                            <label class="label-transparent" for="myCheckbox-@usuario.id-@permiso.Id">@permiso.permiso</label>
                                        </div>

                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer text-13-medium">
                <button @onclick="() => CloseModal()" class="rounded-pill border border-primary blue-dark-bg text-light mx-4" id="descartar-agregar-usuario">
                    Cancelar
                </button>
                <button type="submit" class="rounded-pill border border-input-gray green-bg text-light mx-4" id="guardar-agregar-usuario">
                    Agregar
                </button>
            </div>
        </EditForm>
    </div>
</div>