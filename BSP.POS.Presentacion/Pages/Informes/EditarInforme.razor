
@inject IInformesInterface InformesService
@inject IClientesInterface ClientesService
@inject IActividadesInterface ActividadesService
@inject IUsuariosInterface UsuariosService
@inject AuthenticationStateProvider AuthenticationStateProvider
        <Layout></Layout>
        <div class="container-fluid p-2 pe-5 ps-5 body-edit">
            <EditForm Model="@editarInformeModel" OnValidSubmit="ActualizarInforme">
                <ObjectGraphDataAnnotationsValidator />
            <div class="row">
                <div class="col-md-6">
                    <div class="row p-2">
                        <div class="col-md-6 d-flex row text-center">
                            <div>
                                <span class="blue-good">Fecha: </span><input type="date" class="text-success border-0 w-50" value="@informe.fecha_consultoria">
                            </div>
                            <div>
                                <span class="blue-good">Cliente: </span>
                                <select value="@ClienteAsociado.NOMBRE" class="text-success border-0 w-50">
                                    <option value="@ClienteAsociado.NOMBRE">@ClienteAsociado.NOMBRE</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 d-flex row text-center">
                            <div>
                                <span class="blue-good">Hora de Inicio: </span><input class="text-success width-input border-0" value="@hora_inicio_reducida">
                                <span class="text-success">hs</span>
                            </div>
                            <div>
                                <span class="blue-good">Hora de Fin: </span><input class="text-success width-input border-0" value="@hora_final_reducida">
                                <span class="text-success">hs</span>
                            </div>
                        </div>
                    </div>
                    <div class="row content bg-body-secondary table-height rounded-start-5">
                        <div class="row text-center p-2 blue-good">
                            <div class="col-md-4 p-2">
                                <span>Nombre</span>
                            </div>
                            <div class="col-md-4 p-2">
                                <span>Dep.</span>
                            </div>
                            <div class="col-md-4">
                                <span>Aceptación</span>
                            </div>
                        </div>
                    @if (editarInformeModel.usuariosDeClienteDeInformes != null)
                        {
                        foreach (var usuario in editarInformeModel.usuariosDeClienteDeInformes)
                            {
                                <div class="row p-2 text-center">
                                    <div class="col-md-4">
                                        <span>@usuario.nombre_cliente</span>
                                    </div>
                                    <div class="col-md-4">
                                        <span>@usuario.departamento_cliente</span>
                                    </div>
                                    <div class="col-md-4 pt-0 mt-0">

                                        @if (usuario.aceptacion == "1")
                                        {
                                            <input type="checkbox" class="custom-checkbox" id="myCheckbox @usuario.id" checked disabled>
                                            <label class="label-transparent" for="myCheckbox @usuario.id">.</label>
                                        }
                                        else
                                        {
                                            <input type="checkbox" class="custom-checkbox" id="myCheckbox @usuario.id" disabled>
                                            <label class="label-transparent" for="myCheckbox @usuario.id">.</label>
                                        }

                                    </div>
                                </div>
                            }

                        }

                    </div>
                    <div class="observation border border-success rounded-5 text-success d-flex align-items-center justify-content-center">
                        <span>+ Observaciones</span>
                    </div>


                </div>
                <div class="col-md-6">
                    <div class="p-2 d-flex justify-content-between align-items-center">
                        <span class="blue-good">Informe #@informe.consecutivo</span>
                        <select @bind="informe.modalidad_consultoria" class="text-success border-0">
                            <option value="Virtual">Virtual</option>
                            <option value="Presencial">Presencial</option>
                        </select>
                    </div>

                    <div class="content text-light">
                        <div class="row bg-primary pe-0 ps-0 ms-0 content-behind rounded-bottom-5">
                            <div class="ps-0 ms-0 blue-good-bg content-behind content-behind-bottom ">
                                <div class="row text-center p-2 blue-good-bg ms-0 content-behind">
                                    <div class="col-md-4">
                                        <h5>Actividad</h5>
                                    </div>
                                    <div class="col-md-4">
                                        <h5>HS Cobradas</h5>
                                    </div>
                                    <div class="col-md-4">
                                        <h5>HS No Cobradas</h5>
                                    </div>
                                </div>
                                <div class="overflow-y-auto overflow-x-hidden max-height-col scrollbar-report height-footer ">
                                @if (editarInformeModel.actividadesAsociadas != null)
                                    {
                                    @foreach (var actividad in editarInformeModel.actividadesAsociadas)
                                        {
                                            <div class="row p-2 text-center ms-0">
                                                <div class="col-md-4">
                                                    <select @bind="@actividad.codigo_actividad" @oninput="(e) => CambioActividad(e, actividad.Id)" class="border-0 bg-transparent text-light">
                                                        @foreach (var laActividad in listaActividades)
                                                        {
                                                            <option value="@laActividad.codigo" class="blue-good-bg">
                                                                @laActividad.Actividad
                                                            </option>
                                                        }
                                                    </select>
                                                    <ValidationMessage For="@(() => actividad.codigo_actividad)" />
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="text" @bind-value="actividad.horas_cobradas" @oninput="(e) => CambioHorasCobradas(e, actividad.Id)" class="border-0 bg-transparent width-input text-light">
                                                    <span>horas</span>
                                                    <ValidationMessage For="@(() => actividad.horas_cobradas)" />
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="text" @bind-value="actividad.horas_no_cobradas" @oninput="(e) => CambioHorasNoCobradas(e, actividad.Id)" class="border-0 bg-transparent width-input text-light">
                                                    <span>horas</span>
                                                      <ValidationMessage For="@(() => actividad.horas_no_cobradas)" />
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                            <div class="row p-4 ms-0 text-center bg-primary rounded-bottom-5">
                                <div class="col-md-4">
                                    <span>Total de Horas</span>
                                </div>
                                <div class="col-md-4">
                                    <span>@total_horas_cobradas</span>
                                </div>
                                <div class="col-md-4">
                                    <span>@total_horas_no_cobradas</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="p-2 text-success d-flex justify-content-center m-3">
                        <div class="d-flex row text-center">
                            <i class="fa-solid fa-trash"></i>
                            <span>Descartar</span>
                        </div>
                        <button type="submit" class="d-flex row text-center bg-transparent border-0 width-25 text-success">
                            <i class="fa-solid fa-download"></i>
                            <span>Guardar Borrador</span>
                        </button>
                        <div class="d-flex row text-center">
                            <i class="fa-solid fa-square-check"></i>
                            <span>Finalizar</span>
                        </div>
                        <div class="d-flex row text-center">
                            <i class="fa-regular fa-paper-plane"></i>
                            <span>Enviar al cliente</span>
                        </div>
                    </div>
                </div>
            </div>
            </EditForm>
        </div>



