@inject IActividadesInterface ActividadesService
@inject AuthenticationStateProvider AuthenticationStateProvider

<div id='modal' class='modal' style='display: @(ActivarModal ? "block" : "none")'>
    <div class="modal-content bg-light">

        <div class=" modal-body d-flex g-2 text-center bg-light ">
            <div class="container mt-5 border-transparent">
                <i class="fa-solid fa-triangle-exclamation fa-2xl text-warning"></i>
                <h2 class="text-danger">¿Está seguro de eliminar la Actividad @nombreActividad?</h2>
            </div>
        </div>
        <div class="modal-footer">
            <button @onclick="() => CloseModal()" class="rounded-pill border border-primary bg-primary text-light" id="cancelar-usuario">Cancelar</button>
            <button @onclick="EliminarActividadDeInforme" class="rounded-pill border border-success bg-danger text-light" id="Eliminar-usuario">Eliminar</button>
        </div>
    </div>
</div>

