@using BSP.POS.Presentacion.Pages.Informes.EditarInforme
@inject IInformesInterface InformesService
@inject NavigationManager navigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="d-flex align-items-center ps-5 footer-right">
    @if (Consecutivo != string.Empty)
    {
        <div class="ms-auto justify-content-center ">
            <h4>Informe Servicio</h4>
            <h4># @Consecutivo</h4>
        </div>
        if(Estado == "Borrador"){
        <div class="ms-auto d-flex">
            <div class="d-flex row text-center mouse-pointer " @onclick="IrAEditar">
                <i class="fa-solid fa-pen-to-square mb-2"></i>
                <a >Editar</a>
            </div>
            <div class="d-flex row text-center mouse-pointer" @onclick="() => ClickHandlerFinalizarInforme(true)">
                <i class="fa-solid fa-check-to-slot mb-2"></i>
                <a href="">Finalizar</a>
            </div>
        </div>
        }
    }
</div>
<ModalFinalizarInforme ActivarModal="@activarModalFinalizarInforme" OnClose="ClickHandlerFinalizarInforme" esquema="@esquema" consecutivo="@Consecutivo"></ModalFinalizarInforme>

